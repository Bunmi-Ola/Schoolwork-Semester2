--1
select FirstName ||' '||Lastname as "Name", 
ROUND((MONTHS_BETWEEN (CURRENT_DATE, EMPLOYEE.BIRTHDATE))/12, 1) as Years
from EMPLOYEE;

--2
select FirstName ||' '||Lastname as "Name", 
ROUND((MONTHS_BETWEEN (CURRENT_DATE, EMPLOYEE.BIRTHDATE)), 0) as "Age in Months"
from EMPLOYEE
ORDER BY "Age in Months" asc;

--3

SELECT RTRIM(TO_CHAR(HIREDATE, 'Day'))||', the ' || RTRIM(TO_CHAR(HIREDATE, 'ddth')) ||' of '|| 
RTRIM(TO_CHAR(HIREDATE, 'Month')) ||', '||RTRIM(TO_CHAR(HIREDATE, 'yyyy')) AS "HIRE DATE", 
RTRIM(TO_CHAR(NEXT_DAY(ADD_MONTHS(HIREDATE, 6), 'MONDAY'), 'Day'))||',the ' || RTRIM(TO_CHAR(NEXT_DAY(ADD_MONTHS(HIREDATE, 6), 
'MONDAY'), 'ddth'))||' of '|| RTRIM(TO_CHAR(NEXT_DAY(ADD_MONTHS(HIREDATE, 6), 'MONDAY'), 'Month'))
||', '|| RTRIM(TO_CHAR(NEXT_DAY(ADD_MONTHS(HIREDATE, 6), 'MONDAY'), 'yyyy')) AS "PERFORMANCE REVIEW DATE"
FROM EMPLOYEE;


--4
Select EMPID, JOBCODEDATE, ADD_MONTHS(JOBCODEDATE, 3) as Bonus, LAST_DAY(JOBCODEDATE) as "TAX DATE" FROM EMPLOYEE;

--5
SELECT MIN(HIREDATE) AS "FIRSTHIRE" FROM EMPLOYEE;

--6
Select LAST_DAY(CURRENT_DATE) from dual;

--7
Select NEXT_DAY(CURRENT_DATE, 'Friday') as payday from dual;

--8
SELECT TO_CHAR(SYSDATE, 'yyyy-mm-dd hh24:mi:ss') "NOW",
TO_CHAR(SYSDATE + 3/24, 'yyyy-mm-dd hh24:mi:ss') "NOW PLUS 3 HOURS"
FROM DUAL;

--9
SELECT  LTRIM(TO_CHAR(NEXT_DAY('1-JAN-2005', 'SUNDAY'), 'dd-MON-yyyy'), '0')"FIRST SUNDAY" FROM DUAL;

--10
SELECT TRUNC(MONTHS_BETWEEN(CURRENT_DATE,'01-JAN-2000')) "NUMBER OF MONTHS" FROM DUAL;

--11
SELECT LASTNAME || ' ' || FIRSTNAME AS "FULLNAME", EMPLOYEE.JOBCODE
FROM EMPLOYEE
JOIN JOB ON JOB.JOBCODE = EMPLOYEE.JOBCODE
WHERE EMPLOYEE.JOBCODEDATE  != EMPLOYEE.HIREDATE;

--12
SELECT EMPID, HIREDATE, JOBCODEDATE,GREATEST(HIREDATE, JOBCODEDATE) AS "LATEST"
FROM EMPLOYEE;

--13
SELECT FIRSTNAME, LASTNAME, TO_CHAR(birthdate,'DAY') "DAY OF BIRTH"
FROM EMPLOYEE;